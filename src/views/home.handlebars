<main class="container mt-4">
    <h1 class="text-center mb-4">Bienvenido a Mi Tienda</h1>

    <div class="row justify-content-center">
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Productos</h5>
                    <p class="card-text">Explora nuestra amplia selección de productos</p>
                    <a href="/products" class="btn btn-primary">Ver Productos</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Carrito</h5>
                    <p class="card-text">Gestiona tus productos seleccionados</p>
                    <a href="/cart" class="btn btn-primary">Ir al Carrito</a>
                </div>
            </div>
        </div>
    </div>

    {{#if user}}
        <div class="text-center mt-4">
            <h3>Bienvenido, {{user.firstName}}!</h3>
            <p>¿Qué te gustaría hacer hoy?</p>
        </div>
    {{else}}
        <div class="text-center mt-4">
            <h3>¿No tienes una cuenta?</h3>
            <p>Regístrate para disfrutar de todos nuestros beneficios</p>
            <a href="/register" class="btn btn-success">Registrarse</a>
        </div>
    {{/if}}
</main>
